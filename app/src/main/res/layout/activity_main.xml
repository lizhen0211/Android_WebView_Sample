<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.lz.android_webview_sample.MainActivity">

    <Button
        android:id="@+id/basicWebviewBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:onClick="onBasicWebviewBtnClick"
        android:text="basicWebview" />

    <Button
        android:id="@+id/webview_setting_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:onClick="onWebviewSettingBtnClick"
        android:text="webviewSetting" />

    <Button
        android:id="@+id/webviewClientBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:onClick="onWebviewClientBtnClick"
        android:text="webviewClient" />

    <Button
        android:id="@+id/webviewChromeClientBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:onClick="onWebChromeClientBtnClick"
        android:text="webviewChromeClient" />

    <Button
        android:id="@+id/androidJsInteractBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:onClick="onAndroidJsInteractBtnClick"
        android:text="androidJsInteract" />


</LinearLayout>
